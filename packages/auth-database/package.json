{
  "name": "auth-database",
  "type": "module",
  "description": "Auth database package for ContextHub",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "type-check": "tsc --noEmit",
    "prepare": "npm run db:generate && npm run build",
    "build": "tsc",
    "reset-database": "npx prisma migrate reset -f"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "prisma": "^6.12.0",
    "tsx": "^4.19.3",
    "typescript": "5.8.3"
  }
}
